<div>
    {{!-- {{#if loggedIn}} --}}

    <h1>{{user.username}}'s Posts</h1>

    <div class="posts">
        {{#each user.posts as |post|}}
        <div class="card">
            <h3>{{post.title}}</h3>
            <p>{{post.text}}</p>
            <a href="/edit/{{post.id}}">Edit/Delete</a>
        </div>
        {{/each}}
    </div>

    <div>
        <form class="form post-form">
            <div class="form-group">
                <label for="post-title">Title:</label>
                <input class="form-input" type="text" id="post-title" />
            </div>
            <div class="form-group">
                <label for="post-text">Post:</label>
                <input class="form-input" type="text" id="post-text" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">submit</button>
            </div>
        </form>
    </div>

    {{!-- {{else}}
    <a href="/login">Login to see your Dashboard</a>
    {{/if}} --}}


</div>

<script src="./js/post.js"></script>